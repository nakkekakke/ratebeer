<p id="notice"><%= notice %></p>

<% @places.each do |place| %>
  <% if (params[:id] == place.id) %>
    <h2><%= place.name %></h2>

    <p>
      <i><%= place.status %></i>
    </p>

    <p>
      <%= place.street %>
    </p>

    <p>
      <%= place.zip %> <%= place.city %>
    </p>
  <% end %>
<% end %>