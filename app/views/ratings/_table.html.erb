<table class="table table-sm table-hover">
  <thead>
    <tr>
      <th></th>
      <th><small>Average</small></th>
    </tr>
  </thead>

  <tbody>
    <% table_items.each do |item| %>
      <tr>
        <td><%= link_to item.name, item %></td>
        <td><%= round(item.average_rating) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
