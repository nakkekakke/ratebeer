<h2>List of ratings</h2>

<p>
  Total number of ratings: <%= @ratings.count %>
</p>
<br>

<div class="container">
  <div class="row">
    <div class="col">
      <h4>Top beers<h4>
      <%= render 'table', table_items: @top_beers %>
    </div>
    <div class="col">
      <h4>Top breweries</h4>
      <%= render 'table', table_items: @top_breweries %>
    </div>
    <div class ="col">
      <h4>Top styles</h4>
      <%= render 'table', table_items: @top_styles %>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <h4>Most active users</h4>
      <table class="table table-sm table-hover">
        <thead>
          <tr>
            <th></th>
            <th><small>Ratings</small></th>
          </tr>
        </thead>
        <tbody>
          <% @top_users.each do |user| %>
            <tr>
              <td><%= link_to user.username, user %></td>
              <td><%= user.ratings.count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<h4>Latest ratings:</h4>

<ul>
  <% @recent_ratings.each do |rating| %>
    <li>
      <%= rating %> by
      <%= link_to rating.user.username, rating.user %> at
      <%= rating.created_at %>
    </li>
  <% end %>
</ul>