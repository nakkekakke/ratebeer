<p id="notice"><%= notice %></p>

<h2>
  <%= @user.username %>
</h2>

<% if @user.ratings.empty? %>
  <p>Has not rated any beers yet</p>
<% else %>
  <p>
    Has made <%= pluralize(@user.ratings.count, 'rating') %> with the average score of <%= @user.average_rating %>
  </p>
  <p> Favorite beer: <%= @user.favorite_beer.name %> </p>
  <p> Favorite brewery: <%= @user.favorite_brewery.name %> </p>
  <p> Preferred style: <%= @user.favorite_style %> </p>
<% end %>

<p>
  <% if @user.beer_clubs.any? %>
    Member of the following clubs:
    <% @user.beer_clubs.each do |club| %>
      <li>
        <%= link_to club.name, club %>
      </li>
    <% end %>
  <% end %>
</p>

<% if @user.ratings.any?%>
  <h3>
    Ratings
  </h3>

  <ul>
    <% @user.ratings.each do |rating| %>
      <li>
        <%= rating %> 
        <% if @user == current_user %>
          <%= link_to 'Delete', rating_path(rating.id), method: :delete, data: { confirm: 'Are you sure?' } %></li>
        <% end %>
      </li>
    <% end %>
  </ul>
<% end %>

<% if @user == current_user %>
  <%= link_to 'Change password', edit_user_path(@user) %> 
  |
  <%= link_to 'Delete account', @user, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
