 <h1>Users</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Username</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <% if user.closed %>
          <td><span class="badge badge-info">Account closed</span></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
