 <h1>Users</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th> Username </th>
      <th> Beers rated </th>
      <th> Total ratings </th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <td><%= user.beers.size %></td>
        <td><%= user.ratings.size %></td>
        <td>
          <% if current_user.admin && user.closed %>
            <span class="badge badge-info">Account closed</span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
